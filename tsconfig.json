{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "aot",
    "scripts",
    "test-app"
  ],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "genDir": "aot",
    "skipMetadataEmit": false,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}